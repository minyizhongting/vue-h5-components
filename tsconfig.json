{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        // "strictPropertyInitialization": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "baseUrl": ".",
        "skipLibCheck": true,
        "types": [
            "webpack-env"
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "declaration": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*.ts",
        "index.ts",
        "shims-vue.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}